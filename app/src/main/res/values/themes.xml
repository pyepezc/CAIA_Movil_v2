<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CAIA_Movil_v2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/rojo_dhl_500</item>
        <item name="colorPrimaryVariant">@color/rojo_dhl_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dhl_200</item>
        <item name="colorSecondaryVariant">@color/dhl_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextTheme" >
        <item name="android:textSelectHandleRight">@drawable/text_handle_right</item>
        <item name="android:textSelectHandleLeft">@drawable/text_handle_left</item>
        <item name="android:textSelectHandle">@drawable/text_handle</item>
    </style>

    <style name="Theme.CAIA_Movil_v2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CAIA_Movil_v2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CAIA_Movil_v2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.CAIA_Movil_v2.ProgressBar" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/rojo_dhl_200</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/shape_drop_down_normal</item>
    </style>
</resources>